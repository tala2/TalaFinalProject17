<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SearchFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonGetCurrentLocation"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Current Location" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/imgbtnHOTEST1"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_baseline_local_fire_department_24" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:fontFamily="@font/allura"
            android:text="Search Fragment"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/purple_500"
            android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:fontFamily="@font/alike"
            android:inputType="textPersonName"
            android:text="Location?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAdrss"
            android:layout_width="443dp"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <Spinner
            android:id="@+id/spinner_sales"
            android:layout_width="match_parent"
            android:layout_height="72dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/alike"
            android:inputType="textPersonName"
            android:text="Discount (between x-y)?"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="11dp"
                android:layout_height="38dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnFind1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/common_google_signin_btn_tint"
                android:fontFamily="@font/alice"
                android:text="Find"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textSize="64sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>