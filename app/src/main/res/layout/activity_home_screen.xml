<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient"
    tools:context=".MyUI.HomeScreenActivity">

    <TextView
        android:id="@+id/TvTitle"
        android:layout_width="321dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="cursive"
        android:text="Tiendas"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.Support.CoordinatorLayout"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSignIn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="249dp"
        android:layout_height="0dp"
        android:layout_marginBottom="251dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:text="Sign Up"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn1" />

    <Button
        android:id="@+id/btnSignIn1"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:backgroundTint="@android:color/black"
        android:onClick="@string/app_name"
        android:stateListAnimator="@android:anim/slide_in_left"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>