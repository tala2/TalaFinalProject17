<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.SignInActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="30sp"
                android:text="Sign In"
                android:textAlignment="center"
                android:textSize="@android:dimen/notification_large_icon_width" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="103dp" />

            <EditText
                android:id="@+id/ettEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="@drawable/custom_input_icon"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Enter Your E-mail"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47dp" />

            <EditText
                android:background="@drawable/custom_input_icon"
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:ems="10"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:hint="Enter Your Password"
                android:inputType="textPassword" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="43dp" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:backgroundTint="@color/black"
                android:text="Signin" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnForgetPass"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Forget my password" />

                <Space
                    android:layout_width="80dp"
                    android:layout_height="19dp" />

                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="SignUp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>