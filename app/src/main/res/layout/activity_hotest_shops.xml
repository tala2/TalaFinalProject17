<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.HotestShopsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHot"
            android:layout_width="427dp"
            android:layout_height="104dp"
            android:fontFamily="cursive"
            android:lineSpacingExtra="30sp"
            android:text="Hotest Shops"
            android:textAlignment="center"
            android:textAppearance="@style/Widget.Support.CoordinatorLayout"
            android:textSize="@android:dimen/notification_large_icon_width"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_Hotest"
            android:layout_width="match_parent"
            android:layout_height="575dp">

        </ListView>

        <Button
            android:id="@+id/btnRe"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="@android:color/holo_purple"
            android:text="Search Fragment" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>