<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:autoSizeTextType="uniform"
                android:lineSpacingExtra="8sp"
                android:text="Profile"
                android:textAlignment="center"

                android:textAppearance="@style/Widget.Support.CoordinatorLayout"
                android:textSize="36sp"
                android:typeface="serif"
                android:visibility="visible" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="537dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="81dp"
                            android:background="@drawable/custom_input_icon"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:hint="Enter Your First Name"
                            android:inputType="textPersonName"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etLastName"
                            android:layout_width="421dp"
                            android:layout_height="82dp"
                            android:background="@drawable/custom_input_icon"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:hint="Enter Your Last Name"
                            android:inputType="textPersonName"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:background="@drawable/custom_input_icon"
                            android:drawablePadding="12dp"
                            android:ems="10"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="29dp" />

                        <RadioGroup
                            android:id="@+id/radio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/owner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_input_icon"
                                android:layout_weight="1"
                                android:text="Owner" />

                            <RadioButton
                                android:id="@+id/customer"
                                android:layout_width="426dp"
                                android:background="@drawable/custom_input_icon"
                                android:drawablePadding="12dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Customer" />

                        </RadioGroup>

                        <Button
                            android:id="@+id/btnSaveAdding1"
                            android:layout_width="match_parent"
                            android:layout_height="106dp"
                            android:background="@drawable/ic_back"
                            android:fontFamily="@font/tinos_bold_italic"
                            android:text="save"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="36sp" />

                    </LinearLayout>

                </TableLayout>
            </ScrollView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>